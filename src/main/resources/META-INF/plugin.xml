<idea-plugin>
    <id>com.intellij.plugin.forcereload</id>
    <name>Background File Watcher</name>
    <vendor email="support@example.com" url="http://www.example.com">Example Vendor</vendor>

    <description><![CDATA[
    Automatically watches project source and resource files for external changes and triggers
    IntelliJ's "Reload All From Disk" action when changes are detected.
    This is useful when files are being modified by external tools or processes.

    The plugin ignores build output directories and only watches actual source code and resource files.

    <br/><br/>
    <b>Support Development:</b><br/>
    If you find this plugin useful, please consider supporting its development:<br/>
    <a href="https://www.paypal.com/donate/?hosted_button_id=C9U54KULFG48C">Donate via PayPal</a>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Project-level service for file watching -->
        <projectService serviceImplementation="com.intellij.plugin.forcereload.FileWatcherService"/>
        <!-- Startup activity to initialize file watcher -->
        <postStartupActivity implementation="com.intellij.plugin.forcereload.ProjectOpenListener"/>
        <!-- Project-level settings service (stored in .idea folder) -->
        <projectService serviceImplementation="com.intellij.plugin.forcereload.settings.FileWatcherSettings"/>
        <!-- Settings UI -->
        <projectConfigurable
                parentId="tools"
                instance="com.intellij.plugin.forcereload.settings.FileWatcherConfigurable"
                id="com.intellij.plugin.forcereload.settings.FileWatcherConfigurable"
                displayName="File Watcher Auto Reload"/>
        <!-- Tool Window -->
        <toolWindow
                id="File Watcher"
                anchor="bottom"
                factoryClass="com.intellij.plugin.forcereload.toolwindow.FileWatcherToolWindowFactory"
                icon="AllIcons.Actions.Refresh"/>
    </extensions>
</idea-plugin>
