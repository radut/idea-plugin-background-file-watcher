<idea-plugin>
    <id>com.radut.plugin.bfw</id>
    <name>Background File Watcher</name>
    <vendor email="vendor@example.com" url="http://github.com/radut/idea-plugin-background-file-watcher">RaduT</vendor>

    <description><![CDATA[
    Automatically watches project source and resource files for external changes and triggers
    IntelliJ's "Reload All From Disk" and "Build" action when changes are detected.
    This is useful when files are being modified by external tools or processes.

    <br/><br/>
    <b>Support Development:</b><br/>
    If you find this plugin useful, please consider supporting its development:<br/>
    <a href="https://www.paypal.com/donate/?hosted_button_id=C9U54KULFG48C">Donate via PayPal</a>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Project-level service for file watching -->
        <projectService serviceImplementation="com.radut.plugin.bfw.FileWatcherService"/>
        <!-- Startup activity to initialize file watcher -->
        <postStartupActivity implementation="com.radut.plugin.bfw.ProjectOpenListener"/>
        <!-- Project-level settings service (stored in .idea folder) -->
        <projectService serviceImplementation="com.radut.plugin.bfw.settings.FileWatcherSettings"/>
        <!-- Settings UI -->
        <projectConfigurable
                parentId="tools"
                instance="com.radut.plugin.bfw.settings.FileWatcherConfigurable"
                id="com.radut.plugin.bfw.settings.FileWatcherConfigurable"
                displayName="Background File Watcher"/>
        <!-- Tool Window -->
        <toolWindow
                id="File Watcher"
                anchor="bottom"
                factoryClass="com.radut.plugin.bfw.toolwindow.FileWatcherToolWindowFactory"
                icon="AllIcons.Actions.Refresh"/>
    </extensions>
</idea-plugin>
